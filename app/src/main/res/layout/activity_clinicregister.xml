<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="30dp"
    tools:context=".ClinicRegistry">>

    <EditText
        android:id="@+id/clinicName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Clinic Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/clinicAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Clinic Address"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/clinicPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Clinic Phone Number"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/insuranceType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Insurance Type"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/paymentMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Enter Accepted Payment Method"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/registerClinicBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:background="@drawable/button_rounded"
        android:text="Register Clinic Account"
        android:textColor="#ffffff"
        android:textSize="22sp" />
</LinearLayout>