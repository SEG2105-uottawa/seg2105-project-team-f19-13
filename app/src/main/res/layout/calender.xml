<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Calender">

    <TextView
        android:id="@+id/manageCalendar"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="2dp"
        android:layout_marginRight="2dp"
        android:background="#D81B60"
        android:bufferType="normal"
        android:clickable="false"
        android:shadowColor="#D81B60"
        android:text="Calendar"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textColor="#FFFF"
        android:textSize="24sp"
        android:textStyle="normal"
        android:typeface="normal"
        app:autoSizeTextType="uniform" />

    <TextView
        android:id="@+id/mondayTitle"
        android:layout_width="80dp"
        android:layout_height="41dp"
        android:layout_below="@+id/manageCalendar"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="9dp"
        android:clickable="false"
        android:text="Monday"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#008577"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/mondayHour"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/mondayTitle"
        android:layout_marginStart="11dp"
        android:layout_marginLeft="11dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/mondayTitle"
        android:layout_toRightOf="@+id/mondayTitle"
        android:hint="09:00-17:00"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#008577"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/mondayEditTime"
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mondayHour"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="66dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="4dp"
        android:layout_toEndOf="@+id/mondayHour"
        android:layout_toRightOf="@+id/mondayHour"
        android:gravity="left"
        android:hint="Edit"
        android:inputType="text"
        android:scrollbarAlwaysDrawHorizontalTrack="false"
        android:scrollbarAlwaysDrawVerticalTrack="false"
        android:scrollbarSize="0dp"
        android:textColorHint="#7E24788F"
        android:textCursorDrawable="@color/colorAccent"
        android:textSize="18sp" />

    <Button
        android:id="@+id/mondayEditBtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/mondayHour"
        android:layout_alignBottom="@+id/mondayHour"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="-1dp"
        android:layout_marginBottom="-7dp"
        android:layout_toEndOf="@+id/mondayHour"
        android:layout_toRightOf="@+id/mondayHour"
        android:background="#D81B60"
        android:onClick="mondayEdit"
        android:text="Edit"
        android:textColor="#FFFF"
        android:textSize="12sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/tuesdayEditBtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tuesdayHour"
        android:layout_alignBottom="@+id/tuesdayHour"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="-7dp"
        android:layout_marginBottom="-2dp"
        android:layout_toEndOf="@+id/mondayHour"
        android:layout_toRightOf="@+id/tuesdayHour"
        android:background="#D81B60"
        android:onClick="tuesdayEdit"
        android:text="Edit"
        android:textColor="#FFFF"
        android:textSize="12sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/wednesdayEditBtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/wednesdayHour"
        android:layout_alignBottom="@+id/wednesdayHour"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="-7dp"
        android:layout_marginBottom="-2dp"
        android:layout_toEndOf="@+id/mondayHour"
        android:layout_toRightOf="@+id/wednesdayHour"
        android:background="#D81B60"
        android:onClick="wednesdayEdit"
        android:text="Edit"
        android:textColor="#FFFF"
        android:textSize="12sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/thursdayEditBtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thursdayHour"
        android:layout_alignBottom="@+id/thursdayHour"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="-7dp"
        android:layout_marginBottom="-2dp"
        android:layout_toEndOf="@+id/mondayHour"
        android:layout_toRightOf="@+id/thursdayHour"
        android:background="#D81B60"
        android:onClick="thursdayEdit"
        android:text="Edit"
        android:textColor="#FFFF"
        android:textSize="12sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/fridayEditBtn"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fridayHour"
        android:layout_alignBottom="@+id/fridayHour"
        android:layout_marginStart="165dp"
        android:layout_marginLeft="165dp"
        android:layout_marginTop="-7dp"
        android:layout_marginBottom="-2dp"
        android:layout_toEndOf="@+id/mondayHour"
        android:layout_toRightOf="@+id/fridayHour"
        android:background="#D81B60"
        android:onClick="fridayEdit"
        android:text="Edit"
        android:textColor="#FFFF"
        android:textSize="12sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/tuesdayTitle"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_below="@+id/mondayTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="Tuesday"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#008577"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tuesdayHour"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/tuesdayTitle"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/tuesdayTitle"
        android:layout_toRightOf="@+id/tuesdayTitle"
        android:hint="09:00-17:00"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#008577"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/wednesdayTitle"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_below="@+id/tuesdayTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="Wednesday"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#008577"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/wednesdayHour"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/wednesdayTitle"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/wednesdayTitle"
        android:layout_toRightOf="@+id/wednesdayTitle"
        android:hint="09:00-17:00"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#008577"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/wednesdayEditTime"
        android:layout_width="100dp"
        android:layout_height="39dp"
        android:layout_alignTop="@+id/wednesdayHour"
        android:layout_alignBottom="@+id/wednesdayHour"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="3dp"
        android:layout_toEndOf="@+id/wednesdayHour"
        android:layout_toRightOf="@+id/wednesdayHour"
        android:gravity="left"
        android:hint="Edit"
        android:inputType="text"
        android:textColorHint="#7E24788F"
        android:textCursorDrawable="@color/colorAccent"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/tuesdayEditTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/tuesdayHour"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="63dp"
        android:layout_marginBottom="492dp"
        android:layout_toEndOf="@+id/tuesdayHour"
        android:layout_toRightOf="@+id/tuesdayHour"
        android:gravity="left"
        android:hint="Edit"
        android:inputType="text"
        android:textColorHint="#7E24788F"
        android:textCursorDrawable="@color/colorAccent"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/thursdayEditTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thursdayHour"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="29dp"
        android:layout_marginBottom="357dp"
        android:layout_toEndOf="@+id/thursdayHour"
        android:layout_toRightOf="@+id/thursdayHour"
        android:gravity="left"
        android:hint="Edit"
        android:inputType="text"
        android:textColorHint="#7E24788F"
        android:textCursorDrawable="@color/colorAccent"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/fridayEditTime"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/fridayHour"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="63dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="357dp"
        android:layout_toEndOf="@+id/fridayHour"
        android:layout_toRightOf="@+id/fridayHour"
        android:gravity="left"
        android:hint="Edit"
        android:inputType="text"
        android:textColorHint="#7E24788F"
        android:textCursorDrawable="@color/colorAccent"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/thursdayTitle"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_below="@+id/wednesdayTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="Thursday"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#008577"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/thursdayHour"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/thursdayTitle"
        android:layout_marginStart="13dp"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/thursdayTitle"
        android:layout_toRightOf="@+id/thursdayTitle"
        android:hint="09:00-17:00"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#008577"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/fridayTitle"
        android:layout_width="80dp"
        android:layout_height="42dp"
        android:layout_below="@+id/thursdayTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="24dp"
        android:text="Friday"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#008577"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/fridayHour"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_alignTop="@+id/fridayTitle"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="-2dp"
        android:layout_toEndOf="@+id/fridayTitle"
        android:layout_toRightOf="@+id/fridayTitle"
        android:hint="09:00-17:00"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#008577"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/textNote"
        android:layout_width="229dp"
        android:layout_height="47dp"
        android:layout_below="@+id/fridayTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="82dp"
        android:layout_marginLeft="82dp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="310dp"
        android:text="Enter time slots in the following format: (####-####) (24-HR Clock)"
        android:textColor="#FC054C63"
        android:textSize="14sp"
        android:textStyle="italic" />

</RelativeLayout>